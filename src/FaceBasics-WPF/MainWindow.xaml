<Window x:Class="Microsoft.Samples.Kinect.FaceBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Basics" 
        Height="768" Width="1024" 
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>
    <Grid Margin="1 0 1 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Name ="kinectLogo" Grid.Row="0" Source="Images\Logo.png" HorizontalAlignment="Left" Stretch="Fill" Height="32" Width="81" Margin="0 10 0 5" />
        <TextBlock Name ="title" Grid.Row="0" Margin="0,0,52,18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="#FF2BB802" FontFamily="Segoe UI" FontSize="22" FontWeight="Bold">Hey, you!</TextBlock>
        <Image Name="kinectImage" Grid.Row="0" Source="Images\Status.png" Stretch="None" HorizontalAlignment="Center" Margin="0 0 0 5" />
        <TextBlock Name ="placeHolder" Visibility="Hidden" Grid.Row="0" Margin="0 0 -1 0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="{StaticResource MediumGreyBrush}" FontFamily="Segoe UI" FontSize="18">Hey, you!</TextBlock>

        <Viewbox Name="videoFeed" Visibility="Visible" Grid.Row="1" HorizontalAlignment="Center">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>


        <Viewbox Name="conversationScreen" Visibility="Visible" Grid.Row="1" HorizontalAlignment="Center">
            <Canvas Name="conversationScreenCanvas" Width="1920" Height="1080">


                <Button Name ="Phrase1" Content="Hey you, I'm hungry for brains!" Width="541" Click="Button_Click" Height="191" Canvas.Left="1133" Canvas.Top="190" FontSize="22" />
                <Button Name ="Phrase2" Content="I'm. too sexy for my shirt!" Width="541" Click="Button_Click" Height="205" Canvas.Left="1133" Canvas.Top="453" FontSize="22" />
                <Button Name ="Phrase3" Content="I'm locked in! Help me" Width="546" Click="Button_Click" Height="191" Canvas.Left="1133" Canvas.Top="732" FontSize="22" />
                <Image Name ="profilePic" Source="Images\defaultProfilePic.jpg" HorizontalAlignment="Left" Stretch="Fill" Height="721" Width="555" Canvas.Left="253" Canvas.Top="186" />

                <Image Source="{Binding GazeSource}" Stretch="UniformToFill" Opacity="1"/>

            </Canvas>
        </Viewbox>


        <StatusBar Grid.Row="2" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" Background="White" Foreground="{StaticResource MediumGreyBrush}">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>
    </Grid>
</Window>
